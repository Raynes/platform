<div id="basic_info_container">
  <%=render(:partial => "header", :locals => {:section => "basic_info", :label => "Translator Details", :description => "Translator details section title", :mode => mode})%>
  
  <% form_for(:developer, platform_current_developer, :url => {:action => :index}, :html => {:id => 'basic_info_form', :method => :post}) do |f| %>
    <div class="section_box colored">
      <div style="float:right; padding-right:5px;">
          <%=tr8n_help_icon_tag %>
      </div>
      <div ondblclick="switchSectionMode('basic_info', 'edit')">
        <table>
          <tr>
            <th style="text-align:left;width:120px;padding:3px;vertical-align:middle;font-weight:bold;"><%=trl("Name:", "Translator name")%></th>
            <td style="padding:3px;">
						  <% if mode == :edit %>
                <%=f.text_field(:name)%>
							<% else %>
							   <%= platform_current_developer.name%>
							<% end %>	 	
            </td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>