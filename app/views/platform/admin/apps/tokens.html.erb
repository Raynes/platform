<%= will_filter_tag(@tokens) %>
<%= will_filter_table_tag(@tokens, :columns => [
      :id, 
      :type,
      :token,
      :user_id,
      [:application_id, lambda{|token| link_to(token.application ? token.application.name : token.application_id, {:action => :view, :app_id=>token.application_id})}],
      :created_at,
      :updated_at,
      :authorized_at,
      :invalidated_at,
      :valid_to
  ]) %>
	
