<% if apps.any? %>
  <div style="padding-bottom:20px;">
    <div class="apps_header">
      <span style="float:right; font-size:12px; font-weight:normal;">
        <%=render(:partial => "paginator", :locals => {:apps => apps, :element_id => "searched_apps"})%> 
      </span>
      <%=tr(Platform::Config.searched_apps_title)%>
    </div>
    <div class="apps_body">
      <table style="width:100%;">
        <% apps.each_with_index do |app, index| %>
        <tr style="border-bottom:1px solid #ccc;">
          <td style="width:100px;padding-bottom:5px;padding-top:5px;">
          	<%= link_to(image_tag(app.logo_url), {:action => :view, :id => app.id}) %>
          </td>        	
          <td style="padding-bottom:5px;padding-top:5px;">
					  <div style="float:right">
					     <%= platform_app_rank_tag(app) %>	
					  </div> 
						
						<div style="margin-bottom:10px; font-size:16px; padding-top:5px;">  
              <%= link_to(app.name, {:action => :view, :id => app.id}) %>
						</div>
            
            <div style="margin-bottom:5px;">  
              <%= app.description %>
            </div>
          </td>         
        </tr>
        <% end %>
      </table>
    </div>  
  </div>      
<% end %> 
					